<div class="container" id="forms">
	<h1 style="text-align: center">
		Make A Donation
	</h1>
	<div>
		<form action="/donate" method="POST">
			<div class="form-group">
				<input type="text" placeholder="Item Name" required name="donate[iname]" class="form-control">
			</div>
			<div class="form-group">
				<input type="number" placeholder="Quantity" required name="donate[quantity]" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="Address" required name="address" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="City" required name="donate[city]" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="State" required name="state" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="Zip Code" required name="zip" class="form-control">
			</div>
			<div class="form-group">
				<input type="textbox" placeholder="Phone Number" required name="phone" class="form-control">
			</div>
			<div class="form-group">
				<input type="radio" name="check">Pick up items from my home<br>
				<input type="radio" name="check">Drop items at HelpingHand's office
			</div> 
			<div class="form-group">
				<input type="submit" class="btn btn-primary btn-block">
			</div>
      <br>
		</form>
	</div>
</div>



